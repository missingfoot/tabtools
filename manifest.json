{
  "manifest_version": 3,
  "name": "Tab Tools",
  "version": "1.2.0",
  "description": "Powerful tab management tools: group, copy, organize, and manage your Chrome tabs efficiently with keyboard shortcuts and modern UI",
  "permissions": ["tabs", "clipboardWrite", "downloads", "storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {"service_worker": "background.js"},
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}